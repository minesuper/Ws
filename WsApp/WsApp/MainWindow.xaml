<Window x:Class="WsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WsApp"
        mc:Ignorable="d"
        Title="Организационная структура" Height="800" Width="1200"
        MinHeight="800" MinWidth="1200" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Background="#78B24B" Orientation="Horizontal">
            <Image Source="/Resources/Logo.png" HorizontalAlignment="Left" Margin="10"/>
            <Border CornerRadius="10" BorderThickness="1" BorderBrush="White" Background="White" Margin="18"
                    Width="640">
                <Label Content="Организационная структура" VerticalAlignment="Center"
                       Margin="10 0"></Label>
            </Border>
        </StackPanel>
        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Window>
